{
	"name": "payara-vscode",
	"displayName": "Payara VSCode",
	"description": "Payara Tools for Visual Studio Code",
	"version": "0.0.1",
	"publisher": "Payara",
	"repository": {
		"type": "git",
		"url": "https://github.com/payara/ecosystem-vscode-plugin"
	},
	"keywords": [
		"Java",
		"Jakarta EE",
		"Payara"
	],
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:payara.server.add",
		"onCommand:payara.server.remove",
		"onCommand:payara.server.rename",
		"onCommand:payara.server.refresh",
		"onView:payaraServerExplorer",
		"onView:payaraServer"
	],
	"main": "./out/main/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "payara.server.add",
				"title": "Add Payara Server",
				"category": "Payara",
				"icon": {
					"light": "resources/light/add.svg",
					"dark": "resources/dark/add.svg"
				}
			},
			{
				"command": "payara.server.remove",
				"title": "Remove Payara Server",
				"category": "Payara"
			},
			{
				"command": "payara.server.rename",
				"title": "Rename Payara Server",
				"category": "Payara"
			},
			{
				"command": "payara.server.refresh",
				"title": "Refresh Payara Servers",
				"category": "Payara",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "payara.server.remove.context",
				"title": "Remove"
			},
			{
				"command": "payara.server.rename.context",
				"title": "Rename"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "payaraServerExplorer",
					"name": "Payara Servers"
				}
			],
			"payaraActivitybar": [
				{
					"id": "payaraServer",
					"name": "Servers"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "payaraActivitybar",
					"title": "Payara",
					"icon": "resources/payara.svg"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "payara.server.add",
					"when": "view == payaraServerExplorer || view == payaraServer",
					"group": "navigation@0"
				},
				{
					"command": "payara.server.refresh",
					"when": "view == payaraServerExplorer || view == payaraServer",
					"group": "navigation@1"
				}
			],
			"commandPalette": [
				{
					"command": "payara.server.remove.context",
					"when": "never"
				},
				{
					"command": "payara.server.rename.context",
					"when": "never"
				}
			],
			"view/item/context": [
				{
					"command": "payara.server.remove.context",
					"when": "view == payaraServerExplorer || view == payaraServer"
				},
				{
					"command": "payara.server.rename.context",
					"when": "view == payaraServerExplorer || view == payaraServer"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"fs-extra": "^8.1.0",
		"lodash": "^4.17.15"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.40.0",
		"@types/fs-extra": "^8.0.1",
		"@types/lodash": "^4.14.149",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"typescript": "^3.6.4",
		"tslint": "^5.20.0",
		"vscode-test": "^1.2.2"
	}
}